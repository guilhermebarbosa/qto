<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>QTO</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>  
  <%= javascript_include_tag "application" %>
  
  <!--[if lt IE 8]><%= stylesheet_link_tag "ie", :media => "all" %><![endif]-->

</head>
<body style="padding-top: 0">
	<div id="hld">
	
		<div class="wrapper">		<!-- wrapper begins -->
			<% if current_user %>
				<div id="header">
					<div class="hdrl"></div>
					<div class="hdrr"></div>
				
					<h1><a href="#">QTO</a></h1>
				
					<ul id="nav">
						<li><a href="<%=works_url%>">Obras</a></li>
						<% if permitted_to? :index, :companies %>
						  <li><a href="<%=companies_url%>">Empresas</a></li>
						<% end %>
						<% if permitted_to? :index, :users %>
						  <li><a href="<%=users_url%>">Usu√°rios</a></li>
					  <% end %>
					</ul>
					<p class="user">Ola, 
						<% if current_user %>
							<%=current_user.name%> | <%= link_to "Editar Perfil", edit_profile_path(current_user) %> | <%= link_to "Sair", logout_path %></p>
						<% end %>
					
				</div>		<!-- #header ends -->		
			<% end %>
			
			<%= yield %>
				
			<div id="footer">
			
				<p class="left"><a href="#">QTO</a></p>
				<p class="right">powered by <%= link_to "Dooit", "http://www.dooit.com.br" %></p>
				
			</div>
		
		</div>						<!-- wrapper ends -->
		
	</div>		<!-- #hld ends -->
	
	<!--[if IE]><%= javascript_include_tag "excanvas" %><![endif]-->
	
	<%= javascript_include_tag "jquery.img.preload", "jquery.filestyle.mini", "jquery.wysiwyg", "jquery.date_input.pack", "facebox", "jquery.visualize", "jquery.visualize.tooltip", "jquery.select_skin", "jquery.tablesorter.min", "ajaxupload", "jquery.pngfix", "custom" %>
	
</body>
</html>
